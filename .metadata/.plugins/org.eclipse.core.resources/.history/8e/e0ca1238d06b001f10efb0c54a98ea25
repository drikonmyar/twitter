                        <!-- Iterate through the tweets and display the username and tweet content -->
                        <li th:each="tweet : ${tweets}">
                            <!-- Display the username associated with the tweet -->
                            <strong th:text="${tweet.user.username}">User Name</strong>:
                            <span th:text="${tweet.content}">This is a tweet content.</span>
                            <br>
                            <!-- Display the timestamp formatted as date and time -->
