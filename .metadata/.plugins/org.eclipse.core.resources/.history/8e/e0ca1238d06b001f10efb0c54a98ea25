    <script>
        // Function to scroll to the bottom of the tweet list
        function scrollToBottom() {
            const tweetList = document.getElementById('tweetList');
            setTimeout(() => {
                tweetList.scrollTop = tweetList.scrollHeight;
            }, 100); // Delay to ensure the DOM is updated with the new tweet
        }

        // Call scrollToBottom on page load to move the scroll to the bottom initially
        window.onload = function () {
            scrollToBottom();
        };
    </script>
